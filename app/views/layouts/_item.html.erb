<% if @items.any? %>
  <% @items.each do |item|  %>
  <div class="item-box col-sm-12">
    <div class="deal-type">
      <% if item.deal == 0 %>
        <%= image_tag("deal_0.png")  %>
      <% elsif item.deal == 1 %>
        <%= image_tag("deal_1.png") %>
      <% else %>
        <%= image_tag("deal_2.png") %>
      <% end %>

    </div>

    <%= image_tag("180.jpg", class: "col-sm-4")  %>
    <div class="col-sm-8">
      <h4 class="list-group-item-heading"><%= item.title  %></h4>
      <p class="list-group-item-text"><%= item.description  %></p>
      <p>uploader : <%= item.user.name  %></p>
      <p>price : <%= item.price  %>원</p>

      <%= link_to "자세히 알아보기", item_path(item), class: "btn btn-sm btn-primary" %>
      <% if current_user %>
        <%= link_to "완료", item_path(item), class: "btn btn-sm btn-success" %>
        <%= link_to "삭제", item_path(item), method: :delete, class: "btn btn-sm btn-danger"%>
      <% end %>
    </div>
  </div>
  <% end %>
<% end %>
