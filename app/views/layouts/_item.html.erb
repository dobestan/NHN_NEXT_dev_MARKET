<% if @items.any? %>
  <% @items.each do |item|  %>
  <div class="item-box col-sm-12">
    <div class="deal-type-sell">
      <%= image_tag("deal_2.png")  %>

    </div>

    <img src="http://placehold.it/120" alt="" class="col-sm-4" />
    <div class="col-sm-8">
      <h4 class="list-group-item-heading"><%= item.title  %></h4>
      <p class="list-group-item-text"><%= item.description  %></p>
      <p>uploader : <%= item.user.name  %></p>
      <p>price : <%= item.price  %></p>
      <p>deal : <%= item.deal  %></p>

        <button type="button" class="btn btn-sm btn-primary">자세히 알아보기</button>
      <% if current_user %>
        <button type="button" class="btn btn-sm btn-success">판매완료</button>
        <button type="button" class="btn btn-sm btn-danger">삭제</button>
      <% end %>
    </div>
  </div>
  <% end %>
<% end %>
